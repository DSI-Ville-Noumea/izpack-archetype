<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

    <programGroup defaultName="My Apps" location="startMenu"/>
    <shortcut name="Izpack"
              target="xdg-open https://myapps.ville-noumea.nc"
              workingDirectory="$INSTALL_PATH/Apps_1"
              iconFile="$INSTALL_PATH/Apps_1\icons\izpack.ico"
              startup="no"
              initialState="normal"
              programGroup="yes"
              desktop="yes"
              startMenu="yes"
              type="Application"
              categories="Application;Applications Mairie;">

        <createForPack name="app_1"/>
    </shortcut>
</izpack:shortcuts>