<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

    <programGroup defaultName="My Apps" location="startMenu"/>
    <shortcut name="Izpack"
              target="$INSTALL_PATH/$Application.folder\Apps_1\launch_izpack.bat"
              workingDirectory="$INSTALL_PATH/$Application.folder\Apps_1"
              iconFile="$INSTALL_PATH/$Application.folder\Apps_1\icons\izpack.ico"
              startup="no"
              initialState="normal"
              programGroup="yes"
              desktop="yes"
              startMenu="yes">

        <createForPack name="app_1"/>
    </shortcut>
</izpack:shortcuts>

